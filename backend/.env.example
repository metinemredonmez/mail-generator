# ============================================
# BACKEND - ENV TEMPLATE
# Bu dosyayi kopyalayip .env olarak kaydedin
# ============================================

NODE_ENV=development

# Database
DATABASE_URL=postgresql://mailpanel:mailpanel123@localhost:5432/mailpanel?schema=public

# JWT
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=7d

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123

# Mail Server Configuration
# Options: mock, zoho, custom
MAIL_PROVIDER=mock
MAIL_DOMAIN=mailpanel.local

# Zoho Mail (if MAIL_PROVIDER=zoho)
ZOHO_ACCOUNT_ID=
ZOHO_AUTH_TOKEN=

# IMAP Settings
IMAP_HOST=imap.zoho.com
IMAP_PORT=993

# Server
PORT=4000
