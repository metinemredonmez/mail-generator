# ============================================
# BACKEND - LOCAL DEVELOPMENT (MacOS)
# ============================================

NODE_ENV=development

# Database (Docker - shared infra)
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/mailpanel?schema=public

# JWT
JWT_SECRET=local-dev-secret-change-in-production-32chars
JWT_EXPIRES_IN=7d

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123

# Server
PORT=4000

# Mail Server Configuration (Mock for local dev)
MAIL_PROVIDER=mock
MAIL_DOMAIN=mailpanel.local

# Zoho Mail (leave empty for local)
ZOHO_ORGANIZATION_ID=
ZOHO_AUTH_TOKEN=

# IMAP Settings (not used in mock mode)
IMAP_HOST=imap.zoho.com
IMAP_PORT=993

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
